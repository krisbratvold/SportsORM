            <table class="table table-striped">
                <tr>
                    <th>Location</th>
                    <th>Team Name</th>
                </tr>
            @foreach (var l in ViewBag.City)
            {
                <tr>
                    <td>@l.Location</td>
                    <td>@l.TeamName</td>
                </tr>
            }
                </table>
            <li>...all teams whose names begin with "T"</li>
            <table class="table table-striped">
                <tr>
                    <th>Location</th>
                    <th>Team Name</th>
                </tr>
            @foreach (var l in ViewBag.TTeams)
            {
                <tr>
                    <td>@l.Location</td>
                    <td>@l.TeamName</td>
                </tr>
