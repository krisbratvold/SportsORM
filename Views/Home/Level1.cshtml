                <tr>
                    <th>Location</th>
                    <th>Team Name</th>
                </tr>
            @foreach (var l in ViewBag.Reverse)
            {
                <tr>
                    <td>@l.Location</td>
                    <td>@l.TeamName</td>
                </tr>
            }
                </table>
            <li>...every player with last name "Cooper"</li>
            <table class="table table-striped">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                </tr>
